<resources>
    <!-- Base application theme. -->
    <style name="Theme.Devicemanagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightPrimary</item>
        <item name="colorPrimaryVariant">@color/nightPrimaryLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/nightPrimaryLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightButtonStroke</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->


        <item name="cardBackgroundColor">@color/nightPrimaryLight</item>
        <item name="editTextBackground">@color/nightPrimaryLight</item>
        <item name="editTextStrokeColor">@color/nightButtonStroke</item>



    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>



</resources>